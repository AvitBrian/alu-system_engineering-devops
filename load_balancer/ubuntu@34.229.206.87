#!/usr/bin/env bash

# Bash script that installs HAProxy and makes configurations

# Install required software properties
apt-get update
apt-get -y install software-properties-common

# Add HAProxy repository
add-apt-repository ppa:vbernat/haproxy-1.8

# Update package lists
apt-get update

# Install HAProxy
apt-get -y install haproxy

# Enable HAProxy service
echo "ENABLED=1" >> /etc/default/haproxy

# Configure HAProxy
echo "listen 5439-webs
    bind *:80
    mode http
    balance roundrobin
    server 5439-web-01 34.229.206.87:80 check
    server 5439-web-02 54.87.8.16:80 check
" >> /etc/haproxy/haproxy.cfg

# Restart HAProxy service
service haproxy restart
